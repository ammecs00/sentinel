# Application
PROJECT_NAME=Sentinel
ENVIRONMENT=development
DEBUG=False
API_VERSION=v1

# Database - PostgreSQL
DATABASE_URL=postgresql://sentinel_user:your_secure_password@localhost:5432/sentinel_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Security - GENERATE NEW KEYS FOR PRODUCTION
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_KEY_AT_LEAST_32_CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# CORS - Restrict in production
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Admin Setup - CHANGE THESE IMMEDIATELY
INITIAL_ADMIN_USERNAME=admin
INITIAL_ADMIN_PASSWORD=CHANGE_THIS_IMMEDIATELY
FORCE_ADMIN_PASSWORD_CHANGE=true

# Data Retention (days)
ACTIVITY_RETENTION_DAYS=90
LOG_RETENTION_DAYS=30

# Monitoring
REQUIRE_EMPLOYEE_CONSENT=true
ENABLE_AUDIT_LOGGING=true

# Redis (for rate limiting and caching)
REDIS_URL=redis://localhost:6379/0

# TLS/SSL
REQUIRE_HTTPS=false